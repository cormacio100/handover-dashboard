{# _layout.html.twig #}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="Generator" CONTENT="Aptana Studio">
		<meta name="Author" CONTENT="Cormac Liston">
		<meta name="Keywords" CONTENT="Handover">
		<meta name="Description" CONTENT="Handover Dashboard system">
		<title>
			{% block title %}SMC Handover{% endblock %}
		</title>
		<style>
			@import "css/style.css";
			@import "css/960/960.css";
			@import "css/960/text.css;
			@import "css/960/reset.css";
			{% block style %}{% endblock %}
		</style>
	</head>
 <body>
	<div id="container">
		<div id="header_wrapper">
			<div id="header">
				<div id="960headerContainer" class="container_12">
					<div id="welcome" class="grid_4">
						{% block loggedIn %}{% endblock %}
					</div>
					<div id="blank_top" class="grid_4">
						&nbsp;
					</div>
					<div id="logo" class="grid_4">
						<img src="img/corporate-logo.gif" alt="corporate-logo">
					</div>
					
					{#---------------NEW LINE---------------#}
					
					<div id="title" class="grid_12">
						Handover Portal
					</div>
					
					{#---------------NEW LINE---------------#}
					
					<div id="navSpacer" class="grid_12">&nbsp;</div>
					
					{#---------------NEW LINE---------------#}
					
					<div id="navContainer" class="grid_12">
						{% block nav %}{% endblock %}	
					</div>
				</div>{#--end 960HeaderContainer--#}
			</div>
		</div>
		<div id="tickerDiv">
			<marquee id="ticker">
			 	{{ ticker }}
			</marquee>
		</div>	
		<div id ="siteSearch" class="container_12"> 
			{% block main %}{% endblock %}
		</div>
  	</div>
  
 </body>
</html>
