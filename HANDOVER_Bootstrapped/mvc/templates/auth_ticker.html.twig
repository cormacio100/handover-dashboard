{#--------------------------------#}
{# templates/auth_ticker.html.twig #}
{#--------------------------------#}

{% extends "_layout.html.twig" %}

{#--------------------------------#}
{% block title %}
	Ticker
{% endblock %}

{#--------------------------------#}

{% block loggedIn %}
    {% include 'logged_in.html.twig' %}
{% endblock %}


{#--------------------------------#}
{% block navigation %}
    {% include 'navigation.html.twig' %}
{% endblock %}

{#--------------------------------#}

{% block main %}
        <div class="row">
            <div class="col-sm-2">&nbsp;</div>
            <div class="col-sm-8">
                <form class="form-horizontal" action="./authCreateTicker" method="POST">
                    <div class="form-group">
                        <label for="tickerDesc" class="control-label">Ticker Description:</label>
                        <input type="text" class="form-control" name="tickerDesc" id="tickerDesc" value="{{ ticker }}" size="100" maxlength="190">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-orange btn-block" name="createTicker" value="Create" type="submit">Button</button>

                    </div>
                </form>
            </div>
            <div class="col-sm-2">&nbsp;</div>
        </div>
{% endblock %}
